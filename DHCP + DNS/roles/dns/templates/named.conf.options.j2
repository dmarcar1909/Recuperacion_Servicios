options {
	directory "/var/cache/bind";

	listen-on { any; };
	listen-on-v6 { any; };

	allow-query {
		localhost;
		192.168.0.0/16;
		2014:13:15::/48;
	};

	forwarders {
		8.8.8.8;
		1.1.1.1;
		2001:4860:4860::8888;
		2001:4860:4860::8844;
	};

	dnssec-validation no;

	auth-nxdomain no;
	recursion yes;
};
